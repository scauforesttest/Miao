<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/root_style"
    android:orientation="vertical"
    >
    
    <RelativeLayout   style="@style/title_style" >
       <TextView android:id="@+id/tv_msgAlertTitle"
           style="@style/title_text_style"
           android:text="消息提醒" 
           />

       <ImageButton
           android:id="@+id/ib_back"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/back"
           android:scaleType="centerInside"
           android:paddingLeft="5dp"
           android:background="@null" />

   </RelativeLayout>
   
	<RelativeLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/white"
	    android:layout_margin="10dp"
	    >

	    <TextView
	        android:id="@+id/tv_soundSwit"
	        style="@style/common_text_style"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"
	        android:text="提示音" />
        
        <TextView android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_soundSwit"
            android:layout_margin="5dp"
            android:background="#f0f0f0" />
        
        <TextView android:id="@+id/tv_shake"
            style="@style/common_text_style"
            android:text="震动"
            android:layout_alignLeft="@id/tv_soundSwit"
            android:layout_below="@+id/line1" />"
        
        <ToggleButton
            android:id="@+id/tb_shake"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/tb_sound"
            android:layout_alignTop="@+id/tv_shake"
            android:background="@drawable/toggle_bg"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/tb_sound"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/toggle_bg"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_soundSwit"
            android:layout_marginRight="10dp"
            android:textOff=""
            android:textOn=""
             />

	   </RelativeLayout> 
</LinearLayout>
