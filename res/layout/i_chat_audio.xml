<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_myHead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/head_img" />

    <TextView
        android:id="@+id/tv_myAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_myHead"
        android:layout_alignTop="@+id/iv_myHead"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/iv_myHead"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/i_read" />

    <TextView
        android:id="@+id/tv_mySpeechTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#dcdcdc"
        android:text="说话时间"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_myHead"
        android:layout_alignRight="@+id/iv_myHead"
        android:layout_below="@+id/iv_myHead"
        android:gravity="center"
        android:text="我"
        android:textColor="#000000" />

</RelativeLayout>